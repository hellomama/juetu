<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TabLayout
                android:id="@+id/home_tab_layout"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:tabTextColor="@color/COLOR_02"
                app:tabIndicatorColor="@color/COLOR_01"
                app:tabSelectedTextColor="@color/COLOR_01"
                app:tabTextAppearance="@style/tab_appearance"
                app:tabMinWidth="100dp"
                android:layout_marginRight="48dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
            <ImageView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="right|center"
                android:src="@drawable/ic_code_black_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_page"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</android.support.constraint.ConstraintLayout>